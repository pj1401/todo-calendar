{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "es2022",
    "allowJs": true,
    // "noImplicitAny": true,
    // "strictNullChecks": true,
    "strict": true, // includes noImplicitAny and strictNullChecks
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  }
}
