{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/src",
    "target": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "es2022",
    "allowJs": true,
    // "noImplicitAny": true,
    // "strictNullChecks": true,
    "strict": true, // includes noImplicitAny and strictNullChecks
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
        "./dist/**/*",
        "./node_modules"
  ]
}
