{
  "name": "express-typescript-template-server",
  "version": "1.0.0",
  "description": "Template for express application",
  "main": "src/index.js",
  "jest": "./jest.config.js",
  "scripts": {
    "start": "npm run build && npm run copy && nodemon --inspect --env-file=.env dist/src/index.js",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "npx tsc --project ./src/tsconfig.json",
    "copy:src": "copyfiles -u 1 src/**/*.html src/**/*.css src/**/*.ejs dist/src/",
    "copy:public": "copyfiles -u 1 public/**/*.html public/**/*.css public/**/*.js public/**/*.ico dist/public/",
    "copy": "npm run copy:src && npm run copy:public",
    "lint": "npx eslint ./src ./public || exit 0",
    "lint:fix": "npx eslint ./src ./public --fix || exit 0",
    "test": "npx --node-options=--experimental-vm-modules jest --config ./jest.config.js || exit 0",
    "test:only": "npx --node-options=--experimental-vm-modules jest --config ./jest.config.js -t"
  },
  "keywords": [],
  "author": "Patricia Johansson <pat.joh.2025@gmail.com>",
  "contributors": [
    "Patricia Johansson <pj222uc@student.lnu.se>"
  ],
  "license": "MIT",
  "private": true,
  "dependencies": {
    "better-auth": "^1.3.27",
    "better-sqlite3": "^12.4.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-http-context": "^2.0.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "copyfiles": "^2.4.1",
    "eslint": "^9.37.0",
    "eslint-plugin-jsdoc": "^61.0.0",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  }
}
